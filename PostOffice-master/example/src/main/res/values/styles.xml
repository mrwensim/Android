<resources>

    <!-- Base application theme. -->
    <style name="Theme.Dark" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="android:actionBarStyle">@style/Theme.Dark.ActionBar</item>
    </style>

    <style name="Theme.Light" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:actionBarStyle">@style/Theme.Light.ActionBar</item>
    </style>

    <style name="Theme.Dark.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/ripple_material_dark</item>
    </style>

    <style name="Theme.Light.ActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/button_material_light</item>
    </style>

</resources>
